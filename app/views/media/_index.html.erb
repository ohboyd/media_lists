
<div class="container" style="max-width: 60%">
  <a class="btn btn-outline-secondary float-right "href="/media/new">New Recommendation</a>

  <h1><%= "Recommended #{@media.first.media_type.titleize.pluralize}" %></h1>

  <div id="media" class="list-group" data-url="<%= sort_media_path %>">

    <% @media.each do |medium| %>
      <%= link_to medium.title, medium, class: "list-group-item", style: "text-align: center", id: dom_id(medium) %>
    <% end %>
  </div>
</div>
