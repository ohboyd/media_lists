<p id="notice"><%= notice %></p>

<div class="container" style="max-width: 60%">
  <a class="btn btn-outline-secondary float-right "href="/movies/new">New Movie</a>
  <h1>Movies</h1>

  <ul id="movies" class="list-group">

    <% @movies.each do |movie| %>
    <center>
      <%= link_to movie.title, movie, class: "list-group-item" %>
    </center>
    <% end %>
  </ul>
</div>
